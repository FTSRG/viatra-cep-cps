<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" name="Rest receiver remote service">
   <service>
      <provide interface="hu.karaszi.ec.centralunit.interfaces.devices.rest.RestDeviceDataReceiver"/>
   </service>
   <implementation class="hu.karaszi.ec.centralunit.interfaces.devices.rest.impl.RestDeviceDataReceiverImpl"/>

   <reference 
   		name="DeviceEventForwarder" 
   		interface="hu.karaszi.ec.centralunit.event.forwarder.api.DeviceEventForwarder" 
   		cardinality="0..1" 
   		policy="dynamic" 
   		bind="setDeviceEventForwarder" 
   		unbind="unsetDeviceEventForwarder"/>
</scr:component>
