<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" name="Rest unit management interface">
   <property name="service.exported.interfaces" value="hu.karaszi.ec.centralunit.interfaces.management.rest.RestUnitManagement" />
   <property name="service.exported.configs" value="org.apache.cxf.rs" />
   <property name="service.exported.intents" value="HTTP" />
   <property name="org.apache.cxf.rs.address" value="http://localhost:9090/management/unit" />
   <property name="org.apache.cxf.rs.provider" value="org.codehaus.jackson.jaxrs.JacksonJsonProvider" />
   <service>
      <provide interface="hu.karaszi.ec.centralunit.interfaces.management.rest.RestUnitManagement"/>
   </service>
   <implementation class="hu.karaszi.ec.centralunit.interfaces.management.rest.impl.RestUnitManagementImpl"/>

   <reference 
   		name="UnitManager" 
   		interface="hu.karaszi.ec.centralunit.dal.UnitManager" 
   		cardinality="0..1" 
   		policy="dynamic" 
   		bind="setUnitManager" 
   		unbind="unsetUnitManager"/>
</scr:component>
