<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">

	<persistence-unit name="environmentcontroller" transaction-type="RESOURCE_LOCAL">
		<class>hu.karaszi.ec.centralunit.dal.NamedEntity</class>
		<class>hu.karaszi.ec.centralunit.dal.devices.Device</class>
		
		<class>hu.karaszi.ec.centralunit.dal.devices.Sensor</class>
		<class>hu.karaszi.ec.centralunit.dal.devices.Actuator</class>
		<class>hu.karaszi.ec.centralunit.dal.measurements.Unit</class>
		<class>hu.karaszi.ec.centralunit.dal.measurements.Measurement</class>

		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:postgresql://localhost:5432/environmentcontroller" />
			<property name="javax.persistence.jdbc.user" value="postgres" />
			<property name="javax.persistence.jdbc.password" value="postgres" />
			<property name="eclipselink.ddl-generation" value="create-tables"/>
		</properties>
	</persistence-unit>
</persistence>